<table>
  <% if header %>
    <thead>
      <% @fields.each do |field| %>
        <th>
          <%= field %>
        </th>
      <% end %>
    </thead>
  <% end %>
  <tbody>
    <% if rows.any? %>
      <% rows.each do |row| %>
        <tr>
          <% @fields.each do |field| %>
            <td>
              <% unless field == :title %>
                <%= row.item[field] %>
              <% else %>
                <%= link_to row.url do %>
                  <%= row.item[field] %>
                <% end %>
              <% end %>
            </td>
          <% end %>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>